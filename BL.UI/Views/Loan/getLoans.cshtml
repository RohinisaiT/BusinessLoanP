@model IEnumerable<BL.DataService.LoanApplicant>

@{
    ViewBag.Title = "getLoans";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Applied Loans</h2>

<p>
    @Html.ActionLink("Create New", "addLoan")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.loanAmountRequired)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.applicantName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.applicantAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.applicantMobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.applicantEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.applicantAadhaar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.applicantPan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.applicantSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoanRepaymentMonths)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.loanAmountRequired)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.applicantName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.applicantAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.applicantMobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.applicantEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.applicantAadhaar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.applicantPan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.applicantSalary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoanRepaymentMonths)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.loanId }) |
            @Html.ActionLink("Details", "Details", new { id=item.loanId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.loanId })
        </td>
    </tr>
}

</table>
